{% extends 'CmsUserBundle::layout.html.twig' %}
{% block body %}

    {% if app.session.flashBag.has('edit-success') %}
        <div class="alert alert-success login-success">
            {% for msg in app.session.flashBag.get('edit-success') %}
                {{ msg }}
            {% endfor %}
        </div>
    {% endif %}
    <div class="edit-user-form">
        {{ form_start(form) }}
        <div class="form-group">
            {{ form_label(form.username) }}
            {{ form_widget(form.username) }}
        </div>
        <div class="form-group">
            {{ form_label(form.email) }}
            {{ form_widget(form.email) }}
        </div>

        <div class="form-group">
            {{ form_label(form.dateOfBirthday) }}
            {{ form_widget(form.dateOfBirthday) }}
        </div>

        <div class="form-group">
            {{ form_label(form.about) }}
            {{ form_widget(form.about) }}
        </div>

        <div class="form-group">
            {{ form_label(form.isActive) }}
            {{ form_widget(form.isActive) }}
        </div>

        <div class="form-group">
            {{ form_label(form.profilePicturePath) }}
            {{ form_widget(form.profilePicturePath) }}
        </div>

        <div class="form-group role-form-group">
            {{ form_label(form.save) }}
            {{ form_widget(form.save) }}
        </div>
        {{ form_row(form._token) }}
        {{ form_end(form) }}
    </div>
{% endblock %}