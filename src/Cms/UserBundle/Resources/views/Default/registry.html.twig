{% extends 'CmsUserBundle:layout.html.twig' %}

{% block body %}
    <style>
        .input-group
        {
            width: 1000px;
            margin:10px;
        }

        .filed-name
        {
            font-family: arial;
            font-size: 18px;
        }
    </style>
<div class="container ">
        <form method="POST" class="formController">
            <div class="form-group">
                <label class="filed-name ">Username</label>
                <input id="usr" name="username" type="text" class="form-control " placeholder="Username" aria-describedby="basic-addon2" required autocomplete="off" >
            </div>

            <div class="form-group">
                <label class="filed-name ">Email</label>
                <input name="email" class="form-control " placeholder="Email" aria-describedby="basic-addon2" required autocomplete="off" >
            </div>

            <div class="form-group">
                <span class="filed-name">Password</span>
                <input name="password" type="password" class="form-control" placeholder="Password" aria-describedby="basic-addon2" required autocomplete="off">
            </div>

            <div class="form-group">
                <span class="filed-name">Date of birthday</span>
                <input name="brthday-date" id="datepicker" type="text" class="form-control" placeholder="Date of birthday" aria-describedby="basic-addon2" required autocomplete="off">
            </div>

            <div class="form-group">
                <span class="filed-name">About me</span>
                <textarea  name="about" class="form-control" placeholder="About me" aria-describedby="basic-addon2" required ></textarea>
            </div>
            <br>
            <button class="btn btn-block">Registry</button>
            {#<div class="form-group formButton">#}
                {#<input style="background-color:silver;" name="submit" type="submit" class="form-control" value="Registry" aria-describedby="basic-addon2" required>#}
            {#</div>#}
        </form>
    {% if errors is defined %}
        {% for error in errors %}
            <li>{{ error.message }}</li>
        {% endfor %}
    {% endif %}
</div>

{% endblock %}
