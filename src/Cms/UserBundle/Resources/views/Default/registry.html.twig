{% extends 'CmsUserBundle:layout.html.twig' %}

{% block body %}
    <style>
        .input-group
        {
            width: 1000px;
            margin:10px;
        }

        .filed-name
        {
            font-family: arial;
            font-size: 18px;
        }
    </style>
<div class="container ">
        <form method="POST" class="formController">
            <div class="form-group">
                <label class="filed-name ">Username</label>
                <input id="usr" name="username" type="text" class="form-control " placeholder="Username" aria-describedby="basic-addon2" required autocomplete="off" >
            </div>

            <div class="form-group">
                <label class="filed-name ">Email</label>
                <input name="email" type="email" class="form-control " placeholder="Email" aria-describedby="basic-addon2" required autocomplete="off" >
            </div>

            <div class="form-group">
                <span class="filed-name">Password</span>
                <input name="password" type="password" class="form-control" placeholder="Password" aria-describedby="basic-addon2" required autocomplete="off">
            </div>

            <div class="form-group">
                <span class="filed-name">Date of birthday</span>
                <input name="brthdayDate" id="datepicker" type="text" class="form-control" placeholder="Date of birthday" aria-describedby="basic-addon2" required autocomplete="off">
            </div>

            <div class="form-group">
                <span class="filed-name">About me</span>
                <textarea  name="about" class="form-control" placeholder="About me" aria-describedby="basic-addon2" required ></textarea>
            </div><br>

            <button id="registryButton" class="btn btn-block btn-info">Registry</button>  <br>

            <div class="box-info">

            </div>
        </form>
</div>

{% endblock %}
