{% block body %}

<style>
    .input-group
    {
        width: 1000px;
        margin:10px;
    }

    .filed-name
    {
        font-family: arial;
        font-size: 18px;
    }
</style>

<div class="container">
    <form method="POST" action="">

        <div class="input-group">
            <span class="filed-name">Username</span>
            <input name="username" type="text" class="form-control" placeholder="Username" aria-describedby="basic-addon2" required autocomplete="off">
        </div>

        <div class="input-group">
            <span class="filed-name">Password</span>
            <input name="password" type="password" class="form-control" placeholder="Password" aria-describedby="basic-addon2" required autocomplete="off">
        </div>
        <br>
        <div class="input-group">
            <input style="background-color:silver;" name="submit" type="submit" class="form-control" value="Login" aria-describedby="basic-addon2" required>
        </div>
    </form>

    {% if sessions %}
        {% for session in sessions %}
            {{ session }}
        {% endfor %}
    {% endif %}
</div>
{% endblock %}