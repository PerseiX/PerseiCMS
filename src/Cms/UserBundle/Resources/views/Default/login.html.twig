{% extends 'CmsUserBundle::layout.html.twig' %}

{% block body %}

<style>
    .input-group
    {
        width: 1000px;
        margin:10px;
    }

    .filed-name
    {
        font-family: arial;
        font-size: 18px;
    }
</style>

<div class="container">
    <form method="POST" action="">

        <div class="form-group">
            <span class="filed-name">Username</span>
            <input name="username" type="text" class="form-control" placeholder="Username" aria-describedby="basic-addon2" required autocomplete="off">
        </div>

        <div class="form-group">
            <span class="filed-name">Password</span>
            <input name="password" type="password" class="form-control" placeholder="Password" aria-describedby="basic-addon2" required autocomplete="off">
        </div>
        <br>
        <div class="form-group">
            <input name="submit" type="submit" class="form-control btn-info login-button" value="Login" aria-describedby="basic-addon2" required>
        </div>
    </form>
    {% if sessions %}
        <div class="box-info">
            <div class="panel panel-danger">
                <div class="panel-heading">
                    {% for session in sessions %}
                        {{ session }}
                    {% endfor %}
                    <span class="pull-right"></span></div>
                </div>
             </div>
        </div>
    {% endif %}
</div>
{% endblock %}